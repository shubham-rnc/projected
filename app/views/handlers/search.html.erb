<p id="notice"><%= notice %></p>
<p> <%= link_to 'New listing', new_handler_path %>
</p>
<h1>Listings</h1>
<% if @items.empty? %>
<p> No search results </p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Values</th>
        <th colspan="3"></th>
      </tr>
    </thead>



    <tbody>
      <tr>
          <th>Serial No.</th>
          <th>Listings ID</th>
          <th>Stream</th>
          <th>Institution</th>
          <th>Course</th>
          <th>Level</th>
          <th>Activation</th>
          
        </tr>
        <% @slno = 1 %>
      <% @items.each do |items| %>
        
        <tr>
          <td><%= @slno %><% @slno = @slno+1 %></td>
          <td><%= items.id %></td>
          <td><%= items.stream %></td>
          <td><%= items.institutehandler.name %></td>
          <td><%= items.course %></td>
          <td><%= items.level %></td>
          <td><%= items.activation %></td>
         <td><%= link_to 'Show', handler_path(items) %></td>
          <td><%= link_to 'Edit', edit_handler_path(items) %></td>
          <td><%= link_to 'Destroy', handler_path(items), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
          <b>Total count of active listings: <%= @active %></b></br>
    <b>Total count of inactive listings: <%= @inactive %></b></br>
    <b>Total: <%= @active+@inactive %>
    </tbody>
  </table>
  <br>
<% end %>