<ul class="nav nav-tabs">
  <li role="presentation" class="active"><%= link_to 'Institutions', institutehandlers_path %></li>
  <li role="presentation" ><%= link_to 'Institution based listings', handlers_path %></li>
</ul>
<p id="notice"><%= notice %></p>
<div class="page-header"><h2>Listing Institute</h2>

<%= link_to 'Create New Institute', new_institutehandler_path %></div>


    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">List of all the Institutions</div>
      <div class="panel-body">
      
      <table class="table">
        <thead>
          <tr>
            <th>Institute Id</th>
            <th>Institute Name</th>
            <th>City</th>
            <th>Country</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @institutehandlers.each do |institutehandler| %>
            <tr>
              <td><%= institutehandler.id %></td>
              <td><%= institutehandler.name %></td>
              <td><%= institutehandler.city %></td>
              <td><%= institutehandler.country %></td>
              <td><%= link_to 'Show', institutehandler %> || 
                  <%= link_to 'Edit', edit_institutehandler_path(institutehandler) %>
                  || 
                  <%= link_to 'Destroy', institutehandler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>


